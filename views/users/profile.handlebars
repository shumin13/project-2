<div class="container">
  <div class="section">

    {{#if currentUser}}
      <h3>Hello, {{ currentUser.name }}.</h3>
    {{/if}}

    <div class="row">
      <div class="col s12 ">
        <ul class="tabs white">
          <li class="tab col s3"><a class="active" href="#bookmarks">Bookmarks</a></li>
          <li class="tab col s3"><a href="#reviews">Reviews</a></li>
        </ul>
      </div>

      <div id="bookmarks">

        <div id="userMap" class="col s12">
        </div>

        <div class="row">
          {{#each eateries as |eatery|}}
            <div class="col s6 m6 l4">
              <a href="/eateries/{{eatery._id}}">
                <div class="card small">
                  <div class="card-image">
                    <img src="{{eatery.image}}">
                  </div>
              </a>
              <div class="card-content">
                <p class="eatery-name">{{eatery.name}}</p>
              </div>
              </div>
            </div>
          {{/each}}
        </div>
      </div>

      <div id="reviews" class="col s12">
        <span class="new badge red" data-badge-caption="Work in Progress"></span>
      </div>

    </div>

  </div>
</div>

<script async src="https://maps.googleapis.com/maps/api/js?key={{GOOGLE_MAPS_KEY}}&language=en&region=SG&callback=initUserMap">
</script>
